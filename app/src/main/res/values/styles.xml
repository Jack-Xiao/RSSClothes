<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="Global">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    <style name="AvatarActionBar">
        <item name="android:layout_width">28dp</item>
        <item name="android:layout_height">28dp</item>
    </style>

    <style name="AvatarXLarge">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="AvatarLarge">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
    </style>

    <style name="AvatarMedium">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
    </style>

    <style name="AvatarSmall">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
    </style>

    <style name="Spinner">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDrawable">@drawable/spinner</item>
        <item name="android:indeterminateDuration">2000</item>
        <item name="android:indeterminateOnly">true</item>
    </style>

    <style name="ListSpinner" parent="Spinner">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
    </style>

    <style name="TabText" parent="Global">
        <item name="android:textColor">@color/tab_text_colors</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="textColor">
        <item name="android:textColor">@color/text</item>
    </style>


    <style name="loginText" parent="textColor">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@color/inset_outer</item>
        <item name="android:textSize">@dimen/login_text_size</item>
        <item name="android:paddingLeft">120dp</item>  <!-- 按钮上设置的内容（例如图片）离按钮左边边界30个像素 -->
        <item name="android:paddingRight">120dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:paddingTop">7dp</item>
<!--        <item name="android:layout_marginLeft">100dp</item> &lt;!&ndash; 整个按钮离左边设置的距离 &ndash;&gt;
        <item name="android:layout_marginRight">100dp</item>-->
    </style>

    <!--extend one of the Theme.AppCompat themes -->
    <style name="Theme.MyTheme" parent="Theme.AppCompat.Light">

    </style>

    <style name="AppNightTheme" parent="Theme.clothes">

    </style>


</resources>
